		<!-- Default app server console appender -->

		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%highlight{%d %-5level [%logger] (%t) %msg%n%throwable}{FATAL=red, ERROR=red, WARN=yellow, INFO=white, DEBUG=green, TRACE=blue}" />
		</Console>

		<!-- Appender which is used for keep track of upgrade logs for use in the 
